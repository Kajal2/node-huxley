#!/usr/bin/env node
var commander = require('commander');
var core = require('../');
var version = require('../package.json').version;

commander
  .version(version)
  .option('-r, --record', 'Record a new test')
  .option('-u, --update', 'Record new screenshot using the automated steps')
  .parse(process.argv);

if (commander.update) {
  core.updateTasks();
} else if (commander.record) {
  core.recordTasks();
} else {
  core.playbackTasks();
}
