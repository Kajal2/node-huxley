#!/usr/bin/env node

'use strict';

var app = require('commander');
var huxley = require('../');
var version = require('../package.json').version;

app
  .version(version)
  .option('-r, --record', 'Record a new test')
  .option('-u, --update', 'Update screenshots using the automated steps')
  .option(
    '-b, --browser <browser>',
    'Default: Firefox. Chrome needs extra setup (See README).'
  )
  .on('--help', function() {
    console.log(
      '  Defaults to search every Huxleyfile in current and nested folders.'
    );
    console.log(
      '  Optionally pass specific folders to search. Accept glob patterns.\n'
    );
    console.log('  Example:\n');
    console.log('    hux --update ./test2 ./test3');
    console.log('    hux -r examples/**\n');
  })
  .parse(process.argv);

var browser = app.browser;
// every unamed param is treated as a path to search
var allFolders = app.args;

if (app.update) {
  huxley.playbackTasksAndSaveScreenshots(browser, allFolders);
} else if (app.record) {
  huxley.recordTasks(browser, allFolders);
} else {
  huxley.playbackTasksAndCompareScrenshots(browser, allFolders);
}
